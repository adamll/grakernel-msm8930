CPUTEMP=$((`cat /sys/devices/platform/msm8930-tmu/curr_temp`/10))
BATTERYTEMP=$((`cat /sys/devices/platform/sec-battery/power_supply/battery/temp`/10))

if [ -e /sys/devices/system/cpu/cpu0/cpufreq/scaling_cur_freq ]; then
	FREQONE="$((`cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_cur_freq` / 1000)) MHz"
else
	FREQONE=Offline
fi

if [ -e /sys/devices/system/cpu/cpu1/cpufreq/scaling_cur_freq ]; then
	FREQTWO="$((`cat /sys/devices/system/cpu/cpu1/cpufreq/scaling_cur_freq` / 1000)) MHz"
else
	FREQTWO=Offline
fi

case $1 in
	freq)
		echo Core 1: $FREQONE@nCore 2: $FREQTWO ;;
	cputemp)
		echo $CPUTEMP °C ;;
	batterytemp)
		echo $BATTERYTEMP °C ;;
esac
